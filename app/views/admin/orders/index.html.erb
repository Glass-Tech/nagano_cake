<h3>注文履歴一覧</h3>
<%= %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order), class:"text-dark" %></td>
        <td><%= order.customer.full_name %></td>
        <td><%= order.order_details.sum(:quantity) %></td><!-- 特定カラムの合計値 -->
        <td><%= order.status_i18n %></td><!-- 注文ステータスの日本語化 -->
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>

