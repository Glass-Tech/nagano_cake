<h3 class="offset-1">商品詳細</h3>

<div class="row offset-1 mt-5">
  <div class="col-lg-5"><%= attachment_image_tag @product, :image, :fill, 300, 250 %></div>

  <div class="col-lg-7">

    <div class="row">
      <div class="col-5">商品名</div>
      <div class="col-7"><%= @product.name %></div>
    </div>

    <div class="row mt-3">
      <div class="col-5">商品説明</div>
      <div class="col-7"><%= @product.detail %></div>
    </div>

    <div class="row mt-3">
      <div class="col-5">ジャンル</div>
      <div class="col-7"><%= @product.genre.name %></div>
    </div>

    <div class="row mt-3">
      <div class="col-5">税込価格<br>(税抜価格)</div>
      <div class="col-7"><%= @product.add_tax_included_price.to_s(:delimited) %>（<%= @product.tax_excluded_price.to_s(:delimited)%>）円</div>
    </div>

    <div class="row mt-3">
      <div class="col-5">販売ステータス</div>
      <div class="col-7">
        <% if @product.is_active? %>
          <div class="text-success"><strong>販売中</strong></div>
        <% else %>
          <div class="text-secondary"><strong>販売停止中</strong></div>
        <% end %>
      </div>
    </div>

    <div class="text-center mt-4">
      <%= link_to "編集する", edit_admin_product_path(@product), class: "btn btn-success" %>
    </div>

  </div>
</div>